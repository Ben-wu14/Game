<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.ben.game.PasswordActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify Passward"
        android:textColor="#336666"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />
    <View
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#3D7876" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:text="Please enter your original passward >"
        android:layout_alignParentBottom="true"
        android:textColor="#3124e6"
        android:background="#add8e6"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="36dip"
        android:background="#FAEBD7"
        android:padding="5dip"
        android:layout_margin="10dip"
        android:textColorHint="#AAAAAA"
        android:textSize="20dip"
        android:layout_marginTop="30dp"
        android:singleLine="true"
        android:layout_gravity="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:text="Please enter the new passward >"
        android:layout_alignParentBottom="true"
        android:textColor="#3124e6"
        android:background="#add8e6"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="36dip"
        android:background="#FAEBD7"
        android:padding="5dip"
        android:layout_margin="10dip"
        android:textColorHint="#AAAAAA"
        android:textSize="20dip"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:text="Please enter the passward again >"
        android:layout_alignParentBottom="true"
        android:textColor="#3124e6"
        android:background="#add8e6"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="36dip"
        android:background="#FAEBD7"
        android:padding="5dip"
        android:layout_margin="10dip"
        android:textColorHint="#AAAAAA"
        android:textSize="20dip"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:layout_gravity="center" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button2"
        android:text="Sure?"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@android:color/white"/>
</LinearLayout>
