<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/password_background"
    android:orientation="vertical"
    tools:context="com.example.ben.game.PasswordActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify Passward"
        android:textColor="#336666"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />
    <View
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="#3D7876" />
    <EditText
        style="@style/register_editText"
        android:id="@+id/origin_pass_input"
        android:hint="Your original passward"
         />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/change_password"
        android:hint="New password"
        style="@style/register_editText" />
    <EditText
        style="@style/register_editText"
        android:id="@+id/change_password_2"
        android:hint="Enter the password again"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_Confirm"
        android:layout_gravity="center"
        android:background="@drawable/button2"
        android:text="confirm"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@android:color/white"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="end"
        android:src="@drawable/sit_dlam"/>
</LinearLayout>
