<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ben.game.Game2">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        ></TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="2.75"
        android:orientation="vertical"
        android:background="@drawable/wood_2_2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="36dp"
                android:text="Time:  "/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/timerTextView"
                android:layout_height="wrap_content"
                android:textSize="36dp"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/layout_hint"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/number_hint"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/five"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="#00000000"
                        android:textColor="#FFFFFF"
                        android:id="@+id/hint_text"
                        android:textSize="36sp"
                        android:text="Hint"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/light_bulb_off"
                        android:id="@+id/bulb"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:weightSum="5">
            <Button
                style="@style/number_item_Theme"
                android:id="@+id/b1"
                android:onClick="buttonP1"
                android:text="1"/>
            <Button
                style="@style/number_item_Theme"
                android:id="@+id/b2"
                android:onClick="buttonP2"
                android:text="2"/>
            <Button
                style="@style/number_item_Theme"
                android:id="@+id/b3"
                android:onClick="buttonP3"
                android:text="3"/>
            <Button
                style="@style/number_item_Theme"
                android:id="@+id/b4"
                android:onClick="buttonP4"
                android:text="4"/>
            <Button
                style="@style/number_item_Theme"
                android:id="@+id/b5"
                android:onClick="buttonP5"
                android:text="5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:weightSum="5">
            <Button
                style="@style/number_item_Theme"
                android:id="@+id/b6"
                android:onClick="buttonP6"
                android:text="6"/>
            <Button
                style="@style/number_item_Theme"
                android:id="@+id/b7"
                android:onClick="buttonP7"
                android:text="7"/>
            <Button
                style="@style/number_item_Theme"
                android:id="@+id/b8"
                android:onClick="buttonP8"
                android:text="8"/>
            <Button
                style="@style/number_item_Theme"
                android:id="@+id/b9"
                android:onClick="buttonP9"
                android:text="9"/>
            <Button
                style="@style/number_item_Theme"
                android:id="@+id/bc"
                android:onClick="buttonPc"
                android:text="C"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
